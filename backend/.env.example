# Application Settings
NODE_ENV=development
PORT=8000
APP_NAME="Taekwondo Competition API"
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/taekwondo_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-minimum-32-characters"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here-minimum-32-characters"
JWT_EXPIRE="24h"
JWT_REFRESH_EXPIRE="7d"

# Encryption
BCRYPT_ROUNDS=12
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# CORS Settings
FRONTEND_URL="http://localhost:5173"
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE_MB=5
UPLOAD_PATH="./uploads"
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf"

# Email Configuration (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@taekwondo-app.com"
FROM_NAME="Taekwondo Competition System"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Security
SESSION_SECRET="your-session-secret-here"
COOKIE_SECRET="your-cookie-secret-here"

# External APIs (if needed)
# PAYMENT_GATEWAY_URL="https://api.payment-provider.com"
# PAYMENT_GATEWAY_KEY="your-payment-key"

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_SEED_DATA=true

# Performance
REQUEST_TIMEOUT_MS=30000
DB_CONNECTION_POOL_SIZE=10

# Monitoring (optional)
# SENTRY_DSN="your-sentry-dsn"
# ANALYTICS_KEY="your-analytics-key"